<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Weathermonitoringandroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.Weathermonitoringandroid.Starting" parent="Theme.SplashScreen" >
        <item name="postSplashScreenTheme">@style/Base.Theme.Weathermonitoringandroid</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_weather</item>
        <item name="windowSplashScreenBackground">@color/white_all</item>
    </style>
    <style name="Widget.App.TextInputLayoutOverlay" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_primary</item>
        <item name="boxStrokeColor">@color/blue_228</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
</resources>